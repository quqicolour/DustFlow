#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/C:/blockchain/personal_project/DustFlow/node_modules/.store/solidity-coverage@0.8.15/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/C:/blockchain/personal_project/DustFlow/node_modules/.store/solidity-coverage@0.8.15/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.store/solidity-coverage@0.8.15/node_modules/solidity-coverage/plugins/bin.js" "$@"
else
  exec node  "$basedir/../.store/solidity-coverage@0.8.15/node_modules/solidity-coverage/plugins/bin.js" "$@"
fi
